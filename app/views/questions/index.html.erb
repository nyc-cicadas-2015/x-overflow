<h1 class="question-header title">Questions</h1>

<hr>

<% if @questions.empty? %>

  <p>There are no questions to show.</p>

<% end %>

<% @questions.each do |question| %>
<table>
  <tr>
    <td class="question-stats">
      <%= question.answers.count %><br>
      answers
    </td>
    <td class="question-stats">
      <%= question.rating %><br>
      votes
    </td>
    <td class="question-info">
      <p class="question-title"><%= link_to question.title, question_path(question) %></p>
      <p><%= question.text %></p>
      <sub>asked <%= question.timestamp %> ago <%= link_to "#{question.user.username}", profile_path(question.user) %></sub>
    </td>
  </tr>
</table>
<hr>
<%end%>
